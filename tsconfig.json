{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, 
    "esModuleInterop": true,          
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }, 
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/**/*.ts",
    "**/*.d.ts"
  ]
}
